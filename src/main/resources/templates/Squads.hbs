{{#partial "content"}}
  <div class="body-overlay"></div>
     <img src="https://www.cnet.com/a/img/hkUYHalOA9_225I8mTRq9ejohQs=/1200x630/2017/10/12/164d6d22-0db8-4603-a672-cb8c07e447b8/netpicks-the-flash.jpg" class="img-fluid bg-image">
           <nav class="navbar navbar-expand-lg bg-light" id="navbar">
                   <a href="/" class="navbar-brand"><img src="https://www.pngitem.com/pimgs/m/408-4083826_flash-logo-png-transparent-png.png"  id="nav-logo"></a>
                   <h1 id="nav-title">HERO SQUAD</h1>
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                          <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="/squads/new">Add Squad</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="/squads">All Squads</a>
                          </li>
                     </ul>
               </nav>
    <div class="text-center" style="position: relative; z-index: 3">
        <h2 class="squads-title">Squads</h2>
    </div>
    {{#if userSquad}}
        {{#each userSquad}}
            <div class="row hero-squads card">
                <div class="col-lg-6">
                    <a href="/squads/{{id}}">
                        <div class="mb-3">
                            <div class="row hero-body">
                                <div class="col-md-4">
                                    <img src="{{url}}" class="hero-img" alt="Hero Image">
                                </div>
                                <div class="col-md-8">
                                    <div class="hero-stats">
                                        <p class="theme">Name:{{squadName}}</p>
                                        <p class="theme">Special powers:{{theme}}</p>
                                        <p class="theme">Weaknesses:{{weaknesses}}</p>
                                        <p class="theme">Age:{{maxHeroes}}</p>
                                        <hr>
                                        <p class="theme">Date Created:{{formatDateTime}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                    <a href="/squads/{{id}}/delete" class="delete"><button class="btn-success delete-hero">Delete Squad</button></a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="text-center no-heroes">
            <strong class="none"><p>This page doesn't have any squads yet</p></strong>
        </div>
    {{/if}}
{{/partial}}
{{> layout.hbs}}