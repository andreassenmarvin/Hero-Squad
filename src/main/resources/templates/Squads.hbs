{{#partial "content"}}
  <div class="body-overlay"></div>
     <img src="https://www.cnet.com/a/img/hkUYHalOA9_225I8mTRq9ejohQs=/1200x630/2017/10/12/164d6d22-0db8-4603-a672-cb8c07e447b8/netpicks-the-flash.jpg" class="img-fluid bg-image">
           <nav class="navbar navbar-expand-lg bg-light" id="navbar">
               <a href="/" class="navbar-brand"><img src="https://www.pngitem.com/pimgs/m/408-4083826_flash-logo-png-transparent-png.png"  id="nav-logo"></a>
               <h1 id="nav-title">HERO SQUAD</h1>
                <ul class="navbar-nav">
                    <li class="nav-item active">
                      <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="#">Add Squad</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="#">All Squads</a>
                      </li>
                 </ul>
           </nav>
    <div class="text-center">
        <h2 class="hd-squads">Squads</h2>
    </div>
    {{#if userSquad}}
        {{#each userSquad}}
            <div class="row squads animated slideInLeft medium">
                <div class="col-lg-6">
                    <a href="/squads/{{id}}">
                        <div class="card mb-3" style="max-width: 540px;">
                            <div class="row no-gutters">
                                <div class="col-md-4">
                                    <img src="{{url}}" class="card-img" alt="Squad Image">
                                </div>
                                <div class="col-md-8 card-back">
                                    <div class="card-body">
                                        <h2 class="card-title text-center">{{squadName}}</h2>
                                        <p class="theme"><strong>Special powers: </strong>{{theme}}</p>
                                        <p class="theme"><strong>Weaknesses: </strong>{{weaknesses}}</p>
                                        <p class="theme"><strong>Age: </strong>{{maxHeroes}}</p>
                                        <hr>
                                        <p><small><i class="far fa-clock"> Date Created: </i> {{formatDateTime}}</small>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                    <a href="/squads/{{id}}/delete" class="delete"><i class="far fa-trash-alt"> Delete Squad</i></a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="text-center">
            <strong class="none"><p>This page doesn't have any squads yet</p></strong>
        </div>
    {{/if}}
{{/partial}}
{{> layout.hbs}}