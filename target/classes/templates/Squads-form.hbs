{{#partial "content"}}
  <div class="body-overlay"></div>
  <img src="https://www.cnet.com/a/img/hkUYHalOA9_225I8mTRq9ejohQs=/1200x630/2017/10/12/164d6d22-0db8-4603-a672-cb8c07e447b8/netpicks-the-flash.jpg" class="img-fluid bg-image">
        <nav class="navbar navbar-expand-lg bg-light" id="navbar">
            <a href="/" class="navbar-brand"><img src="https://www.pngitem.com/pimgs/m/408-4083826_flash-logo-png-transparent-png.png"  id="nav-logo"></a>
            <h1 id="nav-title">HERO SQUAD</h1>
             <ul class="navbar-nav">
                 <li class="nav-item active">
                   <a class="nav-link" href="/">Home</a>
                 </li>
                 <li class="nav-item">
                   <a class="nav-link" href="/squads/new">Add Hero</a>
                 </li>
                 <li class="nav-item">
                   <a class="nav-link" href="/Squads/new">Add Squad</a>
                 </li>
                 <li class="nav-item">
                   <a class="nav-link" href="/squads">All Heroes</a>
                   </li>
              </ul>
        </nav>
        <form action="/Squads/new" method="post">
            <div class="modal-dialog create-modal">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="m-auto">Hero Details</h4>
                        <a href="/">
                            <button type="button" class="modal-close-btn" data-dismiss="modal" aria-label="Close">
                                <i class="bi bi-x"></i>
                            </button>
                        </a>
                    </div>
                    <div class="modal-body">
                        <div class="md-form form-sm">
                            <label for="Name" class="create-labels">
                                 Name*
                            </label>
                            <input type="text" name="squadName" class="form-control form-control-sm" placeholder="Enter your squad's name..." required>
                        </div>

                        <div class="md-form form-sm">
                             <label for="maxSize" class="create-labels">
                                 maxSize*
                             </label>
                            <input type="number" name="maxSize" class="form-control form-control-sm" placeholder="Enter your squad's maximum limit..." required>
                        </div>
                        <div class="md-form form-sm">
                              <label for="Motive" class="create-labels">
                                 Motive*
                              </label>
                            <input type="text" name="motive" class="form-control form-control-sm" placeholder="Enter your squad's motive..." required>
                        </div>
                        <div class="text-center mt-4 mb-2">
                            <button type="submit" class="btn btn-muted create-submit-btn">
                                 Create
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
{{/partial}}
{{> layout.hbs}}
